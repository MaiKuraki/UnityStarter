#node-border {
    background-color: rgb(56, 56, 56);
    border-top-width: 1px;
    border-right-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
    border-left-color: rgb(88, 88, 88);
    border-right-color: rgb(88, 88, 88);
    border-top-color: rgb(88, 88, 88);
    border-bottom-color: rgb(88, 88, 88);
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    border-bottom-left-radius: 5px;
}

#input {
    align-self: stretch;
    justify-content: center;
    align-items: center;
    min-height: 24px;
    padding-top: 4px;
}

/* Enhanced port visibility - circular for input, rounded rectangle for output */
.bt-port {
    min-width: 24px;
    min-height: 24px;
}

/* Input ports (top of child nodes) - perfect circular */
.bt-input-port {
    width: 24px;
    height: 24px;
    min-width: 24px;
    min-height: 24px;
    max-width: 24px;
    max-height: 24px;
    padding: 0px;
    flex-shrink: 0;
}

.bt-input-port .connector,
.bt-input-port > .connector,
.bt-input-port .port-connector {
    width: 14px !important;
    height: 14px !important;
    min-width: 14px !important;
    min-height: 14px !important;
    max-width: 14px !important;
    max-height: 14px !important;
    /* Perfect circle - border-radius = 50% */
    border-top-left-radius: 7px !important;
    border-top-right-radius: 7px !important;
    border-bottom-left-radius: 7px !important;
    border-bottom-right-radius: 7px !important;
    background-color: rgb(100, 100, 100) !important;
    border-width: 2px !important;
    border-color: rgb(200, 200, 200) !important;
    margin: 0px;
    transition-property: width, height, background-color, border-color;
    transition-duration: 0.15s;
    transition-timing-function: ease-out;
}

.bt-input-port:hover .connector,
.bt-input-port:hover > .connector,
.bt-input-port:hover .port-connector {
    width: 16px !important;
    height: 16px !important;
    min-width: 16px !important;
    min-height: 16px !important;
    max-width: 16px !important;
    max-height: 16px !important;
    /* Perfect circle on hover */
    border-top-left-radius: 8px !important;
    border-top-right-radius: 8px !important;
    border-bottom-left-radius: 8px !important;
    border-bottom-right-radius: 8px !important;
    background-color: rgb(150, 150, 150) !important;
    border-color: rgb(255, 255, 255) !important;
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.5) !important;
}

.bt-input-port.connected .connector,
.bt-input-port.connected > .connector,
.bt-input-port.connected .port-connector {
    background-color: rgb(70, 143, 73) !important;
    border-color: rgb(144, 238, 144) !important;
}

.bt-input-port.connected:hover .connector,
.bt-input-port.connected:hover > .connector,
.bt-input-port.connected:hover .port-connector {
    background-color: rgb(90, 163, 93) !important;
    border-color: rgb(255, 255, 255) !important;
    box-shadow: 0 0 10px rgba(144, 238, 144, 0.8) !important;
}

/* Output ports (bottom of parent nodes) - rounded rectangle */
.bt-output-port {
    min-width: 32px;
    min-height: 24px;
    padding: 4px;
}

.bt-output-port .connector,
.bt-output-port > .connector,
.bt-output-port .port-connector {
    width: 28px !important;
    height: 18px !important;
    min-width: 28px !important;
    min-height: 18px !important;
    max-width: 28px !important;
    max-height: 18px !important;
    border-top-left-radius: 8px !important;
    border-top-right-radius: 8px !important;
    border-bottom-left-radius: 8px !important;
    border-bottom-right-radius: 8px !important;
    background-color: rgb(100, 100, 100) !important;
    border-width: 2px !important;
    border-color: rgb(200, 200, 200) !important;
    margin: 0px;
    transition-property: width, height, background-color, border-color;
    transition-duration: 0.15s;
    transition-timing-function: ease-out;
}

.bt-output-port:hover .connector,
.bt-output-port:hover > .connector,
.bt-output-port:hover .port-connector {
    width: 32px !important;
    height: 20px !important;
    min-width: 32px !important;
    min-height: 20px !important;
    max-width: 32px !important;
    max-height: 20px !important;
    border-top-left-radius: 10px !important;
    border-top-right-radius: 10px !important;
    border-bottom-left-radius: 10px !important;
    border-bottom-right-radius: 10px !important;
    background-color: rgb(150, 150, 150) !important;
    border-color: rgb(255, 255, 255) !important;
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.5) !important;
}

.bt-output-port.connected .connector,
.bt-output-port.connected > .connector,
.bt-output-port.connected .port-connector {
    background-color: rgb(70, 143, 73) !important;
    border-color: rgb(144, 238, 144) !important;
}

.bt-output-port.connected:hover .connector,
.bt-output-port.connected:hover > .connector,
.bt-output-port.connected:hover .port-connector {
    background-color: rgb(90, 163, 93) !important;
    border-color: rgb(255, 255, 255) !important;
    box-shadow: 0 0 10px rgba(144, 238, 144, 0.8) !important;
}

/* Input port at top - ensure it's above info container and centered */
.bt-input-port {
    z-index: 10;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    flex-shrink: 0;
}

.bt-input-port .connector {
    margin-left: auto;
    margin-right: auto;
    pointer-events: auto;
}

/* Output port at bottom - ensure it's below info container but visible and centered */
.bt-output-port {
    z-index: 10;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 24px;
    min-width: 32px;
    min-height: 24px;
    cursor: pointer;
}

.bt-output-port .connector {
    margin-left: auto;
    margin-right: auto;
}

#title {
    min-height: 50px;
    align-self: stretch;
    justify-content: center;
    width: 100%;
}

#title-label {
    flex-grow: 1;
    -unity-text-align: middle-center;
    -unity-font-style: bold;
    font-size: 12px;
    color: rgb(255, 255, 255);
    height: 100%;
    width: 100%;
    white-space: normal;
    text-overflow: ellipsis;
    align-self: stretch;
}

#output {
    justify-content: center;
    align-self: center;
    flex-wrap: wrap;
    flex-direction: column-reverse;
    min-height: 24px;
    padding-bottom: 4px;
}

#selection-border {
    border-left-color: rgb(0, 151, 255);
    border-right-color: rgb(0, 151, 255);
    border-top-color: rgb(0, 151, 255);
    border-bottom-color: rgb(0, 151, 255);
    border-top-width: 0;
    border-right-width: 0;
    border-bottom-width: 0;
    border-left-width: 0;
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    border-bottom-left-radius: 5px;
}

:hover > #selection-border {
    border-top-width: 1px;
    border-right-width: 1px;
    border-bottom-width: 1px;
    border-left-width: 1px;
}

:selected > #selection-border {
    border-top-width: 1.5px;
    border-right-width: 1.5px;
    border-bottom-width: 1.5px;
    border-left-width: 1.5px;
}

:hover:selected > #selection-border {
    border-top-width: 3px;
    border-right-width: 3px;
    border-bottom-width: 3px;
    border-left-width: 3px;
}

.node {
    min-width: 100px;
    max-width: 100px;
}

.action #input {
    background-color: rgb(127, 161, 74);
}

.condition #input {
    background-color: rgb(161, 74, 139);
}

.composite #input {
    background-color: rgb(214, 158, 60);
}

.decorator #input {
    background-color: rgb(54, 152, 209);
}

.root #input {
    background-color: rgb(180, 50, 54);
    height: 20px;
}

#node-state-border {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    border-bottom-left-radius: 5px;
}

.running #node-border {
    background-color: rgb(70, 143, 73);
    transition-property: background-color;
    transition-timing-function: ease-in-out-sine;
    transition-duration: 0.25s;
}

.failure #node-state-border {
    background-color: rgb(255, 0, 0);
}

.success #node-state-border {
    background-color: rgb(39, 255, 0);
}

.not-entered #node-state-border {
}

.state-label {
    position: absolute;
    top: 2px;
    left: 0;
    right: 0;
    font-size: 8px;
    font-weight: bold;
    padding: 1px 0;
    background-color: transparent;
    color: rgb(255, 255, 255);
    z-index: 10;
    pointer-events: none;
    text-transform: uppercase;
    letter-spacing: 0.3px;
    -unity-text-align: upper-center;
}

.running .state-label {
    color: rgb(144, 238, 144);
    background-color: rgba(40, 100, 45, 0.9);
}

.success .state-label {
    color: rgb(200, 255, 200);
    background-color: rgba(30, 150, 30, 0.9);
}

.failure .state-label {
    color: rgb(255, 200, 200);
    background-color: rgba(150, 30, 30, 0.9);
}

.not-entered .state-label {
    color: rgb(180, 180, 180);
    background-color: rgba(60, 60, 60, 0.9);
}

.info-container {
    margin-top: 2px;
    margin-bottom: 2px;
    padding-top: 2px;
    padding-bottom: 2px;
    padding-left: 6px;
    padding-right: 6px;
    background-color: rgba(0, 0, 0, 0.3);
    border-top-width: 1px;
    border-top-color: rgba(255, 255, 255, 0.1);
    z-index: 1;
    position: relative;
}

.info-label {
    font-size: 10px;
    color: rgb(200, 200, 200);
    -unity-text-align: middle-center;
    white-space: normal;
    text-overflow: ellipsis;
    overflow: hidden;
    word-wrap: break-word;
    text-align: center;
}

.running .info-label {
    color: rgb(200, 255, 200);
}

.success .info-label {
    color: rgb(200, 255, 200);
}

.failure .info-label {
    color: rgb(255, 200, 200);
}

.running #node-state-border {
    background-color: rgba(70, 143, 73, 0.3);
    border-top-width: 2px;
    border-top-color: rgb(70, 143, 73);
    animation: borderPulse 2s ease-in-out infinite;
}

.success #node-state-border {
    background-color: rgba(39, 255, 0, 0.2);
    border-top-width: 2px;
    border-top-color: rgb(39, 255, 0);
}

.failure #node-state-border {
    background-color: rgba(255, 0, 0, 0.2);
    border-top-width: 2px;
    border-top-color: rgb(255, 0, 0);
}

.running #node-border {
    box-shadow: 0 0 8px rgba(70, 143, 73, 0.5);
}

.success #node-border {
    box-shadow: 0 0 6px rgba(39, 255, 0, 0.4);
}

.failure #node-border {
    box-shadow: 0 0 6px rgba(255, 0, 0, 0.4);
}

#title {
    position: relative;
}

.node {
    min-width: 130px;
    max-width: 160px;
    width: 130px;
}

.running-edge {
    --unity-colors-default: rgb(70, 143, 73);
}

.running-edge .edge-path {
    stroke-width: 3px;
}

.success-edge {
    --unity-colors-default: rgb(39, 255, 0);
}

.failure-edge {
    --unity-colors-default: rgb(255, 0, 0);
}
